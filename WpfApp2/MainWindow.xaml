<Window x:Class="WPF_WSL2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF WSL2 App" Height="450" Width="800">
    <Grid>
        <Button x:Name="ExecuteButton" Content="Execute Command" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="150" Click="ExecuteButton_Click"/>
        <Button x:Name="ClearButton" Content="Clear Output" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="150" Click="ClearButton_Click"/>
        <TextBox x:Name="CommandInput" HorizontalAlignment="Left" Margin="10,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="760"/>
        <ListBox x:Name="OutputBox" HorizontalAlignment="Left" Height="300" Margin="10,70,0,0" VerticalAlignment="Top" Width="760"/>
    </Grid>
</Window>
